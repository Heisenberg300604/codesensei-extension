---
import Button from '../ui/Button.astro';
---

<section class="section-padding relative overflow-hidden" aria-label="Call to action">
  <!-- Subtle Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-950/40 via-dark-bg to-accent-blue/20"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(99,102,241,0.1),transparent_70%)]"></div>
  
  <div class="container-custom relative z-10 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center space-y-6 md:space-y-8">
      <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-balance tracking-tight leading-[1.1]">
        Ready to Level Up Your{' '}
        <span class="gradient-text">LeetCode Game?</span>
      </h2>
      
      <p class="text-lg sm:text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto leading-relaxed tracking-tight">
        Join developers learning smarter, not harder. Star us on GitHub and start contributing today.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4">
        <Button href="https://github.com/Heisenberg300604/codesensei-extension" variant="primary" size="lg" class="group text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4">
          <svg class="w-5 h-5 sm:w-6 sm:h-6 mr-2 inline-block" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Star on GitHub
          <svg class="w-5 h-5 sm:w-6 sm:h-6 ml-2 inline-block group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </Button>
        <Button href="https://github.com/Heisenberg300604/codesensei-extension" variant="secondary" size="lg" class="text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4">
          Contribute
        </Button>
      </div>
      
      <p class="text-gray-400 text-sm sm:text-base">
        Takes &lt; 2 minutes to set up • 100% Open Source • Privacy-First
      </p>
      
      <!-- Trust Badges -->
      <div class="flex flex-wrap items-center justify-center gap-4 sm:gap-6 pt-6 sm:pt-8">
        <div class="flex items-center space-x-2 text-gray-400 text-xs sm:text-sm">
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Free</span>
        </div>
        <div class="flex items-center space-x-2 text-gray-400 text-xs sm:text-sm">
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span>Open Source</span>
        </div>
        <div class="flex items-center space-x-2 text-gray-400 text-xs sm:text-sm">
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          <span>Privacy-First</span>
        </div>
      </div>
    </div>
  </div>
</section>
