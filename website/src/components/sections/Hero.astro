---
import Button from '../ui/Button.astro';
---

<section class="min-h-screen flex items-center justify-center relative overflow-hidden pt-20 md:pt-24" aria-label="Hero section">
  <!-- Subtle Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-dark-bg via-primary-950/20 to-dark-bg opacity-100"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(99,102,241,0.15),transparent_50%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(59,130,246,0.1),transparent_50%)]"></div>
  
  <div class="container-custom relative z-10 px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Left Content -->
      <div class="text-center lg:text-left space-y-6 md:space-y-8 animate-fade-in">
        <div>
          <span class="inline-block px-4 py-2 rounded-full bg-accent-blue/10 border border-accent-blue/20 text-accent-blue text-xs md:text-sm font-semibold uppercase tracking-wide mb-4 md:mb-6">
            AI-Powered LeetCode Mentor
          </span>
        </div>
        
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-[1.1] text-balance tracking-tight">
          Master LeetCode Without The{' '}
          <span class="gradient-text">Spoilers</span>
        </h1>
        
        <p class="text-lg sm:text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto lg:mx-0 leading-relaxed tracking-tight">
          Get smart hints, validate your logic, and learn to think like a senior developerâ€”right inside LeetCode.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center lg:justify-start pt-2">
          <Button href="https://github.com/Heisenberg300604/codesensei-extension" variant="primary" size="lg" class="group text-base sm:text-lg">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 mr-2 inline-block" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Star on GitHub
            <svg class="w-5 h-5 ml-2 inline-block group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </Button>
          <Button href="#demo" variant="secondary" size="lg" class="group text-base sm:text-lg">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 mr-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Watch Demo
          </Button>
        </div>
        
        <!-- Trust Indicators -->
        <div class="flex flex-wrap items-center gap-4 sm:gap-6 justify-center lg:justify-start pt-4 text-xs sm:text-sm">
          <div class="flex items-center space-x-1">
            {[...Array(5)].map(() => (
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
            <span class="ml-2 text-gray-300">4.8/5</span>
          </div>
          <div class="text-gray-400">
            Open Source
          </div>
          <div class="flex items-center space-x-2 text-gray-400">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            <span>Privacy-First</span>
          </div>
        </div>
      </div>
      
      <!-- Right Mockup -->
      <div class="relative animate-float mt-8 lg:mt-0">
        <div class="glass-strong rounded-2xl p-3 sm:p-4 shadow-2xl">
          <div class="bg-dark-bg rounded-lg overflow-hidden border border-white/10">
            <!-- Browser Chrome -->
            <div class="flex items-center space-x-2 px-3 sm:px-4 py-2 sm:py-3 bg-dark-surface border-b border-white/10">
              <div class="flex space-x-1.5 sm:space-x-2">
                <div class="w-2 h-2 sm:w-3 sm:h-3 rounded-full bg-red-500/50"></div>
                <div class="w-2 h-2 sm:w-3 sm:h-3 rounded-full bg-yellow-500/50"></div>
                <div class="w-2 h-2 sm:w-3 sm:h-3 rounded-full bg-green-500/50"></div>
              </div>
              <div class="flex-1 mx-2 sm:mx-4 px-2 sm:px-4 py-1 bg-dark-card rounded text-xs text-gray-400 text-center truncate">
                leetcode.com/problems/two-sum
              </div>
            </div>
            
            <!-- Mockup Content -->
            <div class="p-4 sm:p-6 space-y-3 sm:space-y-4">
              <div class="space-y-2">
                <div class="h-3 sm:h-4 bg-primary-500/20 rounded w-3/4"></div>
                <div class="h-3 sm:h-4 bg-gray-700/50 rounded w-1/2"></div>
              </div>
              
              <!-- Code Editor Mockup -->
              <div class="bg-dark-surface rounded-lg p-3 sm:p-4 border border-white/10 font-mono text-xs sm:text-sm">
                <div class="text-gray-500 mb-2">// Your code here</div>
                <div class="space-y-1">
                  <div class="text-primary-400">function</div>
                  <div class="text-accent-blue pl-4">twoSum</div>
                  <div class="text-gray-300 pl-8">// CodeSensei widget appears here</div>
                </div>
              </div>
              
              <!-- Widget Mockup -->
              <div class="glass rounded-lg p-3 sm:p-4 border-2 border-primary-500/50 animate-glow">
                <div class="flex items-center space-x-2 mb-2">
                  <svg class="w-5 h-5 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                  <span class="font-semibold text-primary-300 text-sm sm:text-base">CodeSensei</span>
                </div>
                <div class="text-xs sm:text-sm text-gray-300 flex items-start space-x-2">
                  <svg class="w-4 h-4 text-accent-orange mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                  <span>Try thinking about hash maps...</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Floating Particles -->
        <div class="absolute -top-4 -right-4 w-2 h-2 bg-primary-400 rounded-full animate-float opacity-60" style="animation-delay: 0s;" aria-hidden="true"></div>
        <div class="absolute -bottom-4 -left-4 w-3 h-3 bg-accent-blue rounded-full animate-float opacity-60" style="animation-delay: 1s;" aria-hidden="true"></div>
        <div class="absolute top-1/2 -left-6 w-2 h-2 bg-accent-orange rounded-full animate-float opacity-60" style="animation-delay: 2s;" aria-hidden="true"></div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce hidden md:block" aria-hidden="true">
    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
