<section class="section-padding bg-dark-surface/30 relative" aria-label="Solution overview">
  <div class="container-custom px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-16 items-center relative">
      <!-- Before (Problem) -->
      <div class="space-y-4 sm:space-y-6 opacity-60">
        <div class="text-center lg:text-left">
          <h3 class="text-xl sm:text-2xl font-bold text-gray-500 mb-3 sm:mb-4">Before</h3>
        </div>
        <div class="glass rounded-2xl p-6 sm:p-8 grayscale">
          <div class="space-y-4">
            <div class="flex items-center space-x-2 text-gray-500">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
              <span class="font-semibold">Stuck</span>
            </div>
            <div class="flex items-center space-x-2 text-gray-500">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-semibold">Frustrated</span>
            </div>
            <div class="flex items-center space-x-2 text-gray-500">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
              </svg>
              <span class="font-semibold">Not Learning</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Center Divider (Mobile: Hidden, Desktop: Absolute) -->
      <div class="hidden lg:block absolute left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-transparent via-primary-500 to-transparent transform -translate-x-1/2 -z-10"></div>
      <div class="hidden lg:flex absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10">
        <div class="glass-strong rounded-full p-4 border-2 border-primary-500">
          <span class="text-2xl">ðŸ§ </span>
        </div>
      </div>
      
      <!-- After (Solution) -->
      <div class="space-y-4 sm:space-y-6 lg:text-right mt-8 lg:mt-0">
        <div class="text-center lg:text-right">
          <h3 class="text-xl sm:text-2xl font-bold text-white mb-3 sm:mb-4">After</h3>
        </div>
        <div class="glass rounded-2xl p-6 sm:p-8 border-2 border-primary-500/50">
          <div class="space-y-4">
            <div class="flex items-center space-x-2 text-primary-300 justify-center lg:justify-end">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
              <span class="font-semibold">Guided</span>
            </div>
            <div class="flex items-center space-x-2 text-emerald-300 justify-center lg:justify-end">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-semibold">Confident</span>
            </div>
            <div class="flex items-center space-x-2 text-accent-blue justify-center lg:justify-end">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <span class="font-semibold">Mastering</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
