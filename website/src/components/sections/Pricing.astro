---
import Card from '../ui/Card.astro';
import Button from '../ui/Button.astro';
import Badge from '../ui/Badge.astro';
---

<section id="pricing" class="section-padding bg-dark-surface/30">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 tracking-tight">
        Transparent & Affordable
      </h2>
      <p class="text-lg sm:text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed tracking-tight">
        Free extension. Pay only for AI usage. No hidden fees, no subscriptions.
      </p>
    </div>
    
    <div class="max-w-3xl mx-auto">
      <Card class="p-8 md:p-12">
        <div class="text-center mb-8">
          <h3 class="text-2xl md:text-3xl font-bold mb-4 tracking-tight">
            Free Extension. Pay Only for AI Usage.
          </h3>
          <Badge variant="success" class="text-base px-4 py-2">
            First 50 requests/day FREE on Gemini
          </Badge>
        </div>
        
        <div class="space-y-6 mb-8">
          <div class="glass rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <span class="text-gray-300">Gemini API Pricing</span>
              <span class="text-sm text-gray-400">Pay-as-you-go</span>
            </div>
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="text-gray-400">First 50 requests/day</span>
                <span class="font-semibold text-emerald-400">FREE</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-400">After free tier</span>
                <span class="font-semibold">~$0.001 per request</span>
              </div>
            </div>
          </div>
          
          <!-- Cost Calculator -->
          <div class="glass rounded-xl p-6">
            <h4 class="font-semibold mb-4">Cost Calculator</h4>
            <div class="space-y-4">
              <div>
                <label class="block text-sm text-gray-400 mb-2">
                  Problems per month: <span id="problem-count" class="text-white font-semibold">100</span>
                </label>
                <input
                  type="range"
                  min="10"
                  max="1000"
                  value="100"
                  step="10"
                  id="problem-slider"
                  class="w-full h-2 bg-dark-surface rounded-lg appearance-none cursor-pointer accent-primary-500"
                />
                <div class="flex justify-between text-xs text-gray-500 mt-1">
                  <span>10</span>
                  <span>500</span>
                  <span>1000+</span>
                </div>
              </div>
              
              <div class="pt-4 border-t border-white/10">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-gray-400">Estimated monthly cost</span>
                  <span class="text-2xl font-bold gradient-text" id="estimated-cost">$0.50</span>
                </div>
                <p class="text-xs text-gray-500">
                  Based on ~5 API calls per problem (hints, validation, dry-run)
                </p>
              </div>
            </div>
          </div>
          
          <!-- Examples -->
          <div class="grid md:grid-cols-3 gap-4">
            <div class="glass rounded-lg p-4 text-center">
              <div class="text-2xl font-bold mb-1">100</div>
              <div class="text-sm text-gray-400 mb-2">problems</div>
              <div class="text-lg font-semibold text-primary-300">≈ $0.50</div>
            </div>
            <div class="glass rounded-lg p-4 text-center">
              <div class="text-2xl font-bold mb-1">500</div>
              <div class="text-sm text-gray-400 mb-2">problems</div>
              <div class="text-lg font-semibold text-primary-300">≈ $2.00</div>
            </div>
            <div class="glass rounded-lg p-4 text-center">
              <div class="text-2xl font-bold mb-1">1000</div>
              <div class="text-sm text-gray-400 mb-2">problems</div>
              <div class="text-lg font-semibold text-primary-300">≈ $4.00</div>
            </div>
          </div>
        </div>
        
        <div class="text-center">
          <Button
            href="https://makersuite.google.com/app/apikey"
            target="_blank"
            rel="noopener noreferrer"
            variant="primary"
            size="lg"
            class="w-full md:w-auto"
          >
            Get Your Free API Key
          </Button>
          <p class="text-sm text-gray-400 mt-4">
            Link to <a href="https://makersuite.google.com/app/apikey" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:text-primary-300">Google AI Studio</a>
          </p>
        </div>
      </Card>
    </div>
  </div>
</section>

<script>
  const slider = document.getElementById('problem-slider');
  const problemCount = document.getElementById('problem-count');
  const estimatedCost = document.getElementById('estimated-cost');
  
  if (slider && problemCount && estimatedCost) {
    slider.addEventListener('input', (e) => {
      const problems = parseInt(e.target.value);
      problemCount.textContent = problems;
      
      // Calculate cost: ~5 API calls per problem, $0.001 per call after free tier
      // Assuming user exceeds free tier (50 requests/day = ~1500/month)
      const apiCalls = problems * 5;
      const freeCalls = 1500; // Approximate free tier
      const paidCalls = Math.max(0, apiCalls - freeCalls);
      const cost = (paidCalls * 0.001).toFixed(2);
      
      estimatedCost.textContent = cost === '0.00' ? 'FREE' : `$${cost}`;
    });
  }
</script>
