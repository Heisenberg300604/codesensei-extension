---
import Button from '../ui/Button.astro';
---

<footer class="border-t border-white/10 bg-dark-surface/50 backdrop-blur-sm" role="contentinfo">
  <div class="container-custom section-padding">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Branding -->
      <div class="space-y-4">
        <div class="flex items-center space-x-3">
          <span class="text-xl font-bold text-white">CodeSensei</span>
        </div>
        <p class="text-gray-400 text-sm leading-relaxed">
          Your AI coding mentor for LeetCode practice. Learn smarter, not harder.
        </p>
        <p class="text-gray-500 text-xs">
          Made with <span aria-label="love">❤️</span> for LeetCode enthusiasts
        </p>
      </div>

      <!-- Product -->
      <div>
        <h3 class="text-white font-semibold mb-4 text-base">Product</h3>
        <ul class="space-y-2">
          <li><a href="#features" class="text-gray-400 hover:text-white transition-colors text-sm">Features</a></li>
          <li><a href="#how-it-works" class="text-gray-400 hover:text-white transition-colors text-sm">How It Works</a></li>
          <li><a href="#pricing" class="text-gray-400 hover:text-white transition-colors text-sm">Pricing</a></li>
          <li><a href="#faq" class="text-gray-400 hover:text-white transition-colors text-sm">FAQ</a></li>
        </ul>
      </div>

