    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <p class="text-gray-500 text-sm text-center md:text-left">
        © {new Date().getFullYear()} CodeSensei. All rights reserved.
      </p>
      <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6 text-xs sm:text-sm">
        <a href="#" class="text-gray-500 hover:text-white transition-colors">Privacy Policy</a>
